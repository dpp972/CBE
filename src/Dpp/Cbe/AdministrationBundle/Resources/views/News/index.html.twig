{% extends 'DppCbeAdministrationBundle::base_sb_admin.html.twig' %}

{% block administration_page_title %}Gestion des actualit&eacute;s{% endblock %}

{% block administration_page_content %}
    <h1>News list</h1>

    <ul>
        <li>
            <a href="{{ path('actualites_admin_new') }}">
                Ajouter une actualité
            </a>
        </li>
    </ul>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Aperçu</th>
                {#<th>Mediafile</th>#}
                {#<th>Date</th>#}
                {#<th>Note</th>#}
                {#<th>Showtitre</th>#}
                {#<th>Showdescription</th>#}
                {#<th>Showdate</th>#}
                {#<th>Shownote</th>#}
                {#<th>Showtitreonhover</th>#}
                {#<th>Showdescriptiononhover</th>#}
                {#<th>Showdateonhover</th>#}
                {#<th>Shownoteonhover</th>#}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('actualites_admin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.description }}</td>
                {#<td>{{ entity.mediafile }}</td>#}
                {#<td>{% if entity.dateDebut %}{{ entity.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                {#<td>{% if entity.dateFin %}{{ entity.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                {#<td>{{ entity.note }}</td>#}
                {#<td>{{ entity.showTitre }}</td>#}
                {#<td>{{ entity.showDescription }}</td>#}
                {#<td>{{ entity.showDate }}</td>#}
                {#<td>{{ entity.showNote }}</td>#}
                {#<td>{{ entity.showTitreOnHover }}</td>#}
                {#<td>{{ entity.showDescriptionOnHover }}</td>#}
                {#<td>{{ entity.showDateOnHover }}</td>#}
                {#<td>{{ entity.showNoteOnHover }}</td>#}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('actualites_admin_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('actualites_admin_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
